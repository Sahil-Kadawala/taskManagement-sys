<%- layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3>Task detail:</h3>
    </div>
    <div class="card col-6 offset-3 show-card">
      <div class="card-body">
        <p class="card-text">
          <span><b><%= task.title %></span></b> <br />
          <span><%= task.desc %></span> <br />
          <span><%= task.dueDate.toLocaleString("en-IN")%></span> <br />
          <div class="status-container">
            <span>Status: <%= task.status %></span>
          </div>
          <form 
              action="/api/tasks/<%= task._id %>/toggle-status?_method=PATCH" 
              method="POST" 
              class="d-inline"
            >
              <button class="btn btn-xm <%= task.status === 'completed' ? 'btn-success' : 'btn-secondary' %>">
                Toggle Status
              </button>
            </form>
        </p>
      </div>
    </div>
  </div>
  <div class="btns mb-4">
    <a
      href="/api/tasks/<%= task._id %>/edit"
      class="btn btn-dark row-col-1 offset-3 edit-btn"
    >
      Edit</a
    >
    <form 
      action="/api/tasks/<%= task._id%>?_method=DELETE" 
      method="POST"
      onsubmit="return confirm('Are you sure you want to delete this task?');"
    >
      <button class="btn btn-dark row-col-1 offset-3">Delete</button>
    </form>
  </div>
</body>
