<%- layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit Your Task</h3>
      <form
        method="post"
        ,
        action="/api/tasks/<%= task.id%>?_method=PUT"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            class="form-control"
            type="text"
            name="task[title]"
            value="<%= task.title %>"
            placeholder="Enter Title"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Title should be valid</div>
        </div>

        <div class="mb-3 form-desc">
          <label for="desc" class="form-label">Description</label>
          <textarea
            class="form-control"
            name="task[desc]"
            placeholder="Enter Description"
          >
          <%= task.desc %></textarea
          >
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Description should be valid</div>
        </div>

        <div class="row">
          <div class="md-3 col-md-4">
            <label for="dueDate" class="form-label">Due Date</label>
            <input
              class="form-control"
              type="date"
              name="task[dueDate]"
              value="<%= task.dueDate %>"
              placeholder="Enter Date"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Date should be valid</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="status" class="form-label">Status</label>
            <input
              class="form-control"
              type="text"
              name="task[status]"
              value="<%= task.status %>"
              placeholder="Enter Status"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Status should be valid</div>
          </div>
        </div>

        <button class="btn btn-dark mt-3 edit-btn">Update</button>
      </form>
    </div>
  </div>
</body>
